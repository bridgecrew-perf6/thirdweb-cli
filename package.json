{
  "name": "@thirdweb-dev/cli",
  "main": "dist/index.js",
  "version": "0.0.18",
  "repository": "git@github.com:thirdweb-dev/thirdweb-cli.git",
  "author": "sdk@thirdweb.com",
  "license": "MIT",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^17.0.23",
    "hardhat": "^2.9.3",
    "ts-node": "^10.7.0",
    "tsc": "^2.0.4",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@web-std/file": "^3.0.2",
    "commander": "^9.1.0",
    "deepmerge": "^4.2.2",
    "form-data": "^4.0.0",
    "isomorphic-fetch": "^3.0.0",
    "open": "^8.4.0",
    "solc": "^0.8.13",
    "tslog": "^3.3.3"
  },
  "bin": {
    "thirdweb": "./dist/index.js"
  },
  "scripts": {
    "cli": "node -r ts-node/register src/cli/index.ts",
    "build": "tsc -p .",
    "build:lib": "tsup --env.NODE_ENV production --minify --format esm,cjs",
    "build:watch": "yarn run build:lib --watch",
    "prepublishOnly": "yarn build:lib"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "tsup": {
    "entry": [
      "src/cli/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
