{
  "name": "@thirdweb-dev/thirdweb-cli",
  "main": "dist/index.js",
  "version": "0.0.4",
  "repository": "git@github.com:thirdweb-dev/thirdweb-cli.git",
  "author": "sdk@thirdweb.com",
  "license": "MIT",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^17.0.23",
    "pkg": "^5.5.2",
    "ts-node": "^10.7.0",
    "tsc": "^2.0.4",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "commander": "^9.1.0"
  },
  "bin": {
    "thirdweb": "./dist/index.js"
  },
  "scripts": {
    "cli": "node -r ts-node/register src/cli/index.ts",
    "build": "tsc -p .",
    "build:lib": "tsup --env.NODE_ENV production --minify --format esm,cjs"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "tsup": {
    "entry": [
      "src/cli/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
